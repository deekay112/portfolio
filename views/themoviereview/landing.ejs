<% include partials/header %>



<div class="container">
    <div class="jumbotron">
        <div class="container text-center">
        `   <h1>Welcome to The Movie Review</h1>      
            <p>Actual movies with honest reviews from around the world!</p>
            <a class="btn btn-primary btn-lg" href="/tmr/new">Add new Movie</a>
        </div>
    </div>

  

  <div class="row text-center" id="imagediv">
    <% newlyAddedMovie.forEach(function(movie) {  %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail landingthumbnail">
            <img src="<%= movie.image %>" alt="Image" class="landingimage">
            <div class="caption">
                <% if (movie.moviename.length <= 35) {%>
                <p> <%= movie.moviename%> </p> 
                
                <% } else { %> 
                <p> <%= movie.moviename.substring(0, 35) %>.... </p>
                <% } %>
            </div>
            <a class="btn btn-primary btn-xs" href="/tmr/movies/<%=movie._id%>" >More Info</a>
        </div>
    </div>
    <% }) %>
  </div>
<br>


</div>



